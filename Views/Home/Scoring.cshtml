<div class="container searchBox">
    <div class="page-header hero">
        <h1>Scoring Profiles</h1>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <form>
        <div class="input-group">
            
            <span class="input-group-addon"><span class="fa fa-search"></span></span>
            <input type="text" class="form-control" placeholder="Buscar..." ng-model="searchText" ng-disabled="searching">
            <div class="input-group-btn">
               <button class="btn btn-primary" type="submit" ng-click="search($event)" ng-disabled="searching">Buscar</button>
            </div>
            
        </div>
        </form>
    </div>
</div>    

<div class="container" >
    <div class="col-sm-3">
        <div class="card card-block">
        <h4  class="card-title" uib-tooltip="Perfiles disponibles de busqueda" tooltip-is-open="showTooltips" tooltip-enable="showTooltips" tooltip-placement="bottom">Perfiles</h4>
        
        <div class="c-inputs-stacked">
        <label class="c-input c-radio">
        <input name="profile" type="radio" ng-model="profile" value="" ng-change="search($event)">
        <span class="c-indicator"></span>
        Default
        </label>
        <label class="c-input c-radio">
        <input name="profile" type="radio" ng-model="profile" value="ByActor" ng-change="search($event)">
        <span class="c-indicator"></span>
        Sólo actores
        </label>       
        <label class="c-input c-radio">
        <input name="profile" type="radio" ng-model="profile" value="Newer" ng-change="search($event)">
        <span class="c-indicator"></span>
        Más nuevas
        </label>
        <label class="c-input c-radio">
        <input name="profile" type="radio" ng-model="profile" value="Critics" ng-change="search($event)">
        <span class="c-indicator"></span>
        Mejores críticas
        </label> 
        <label class="c-input c-radio">
        <input name="profile" type="radio" ng-model="profile" value="Complete" ng-change="search($event)">
        <span class="c-indicator"></span>
        Completo
        </label>   
        </div>      
        </div>
    </div>
    <div class="col-sm-9">
        <div class="col-xs-12 text-xs-center" ng-show="searching">
                <h4>Buscando...</h4><br>
                <img src="images/loader.gif" class="center-block">
        </div>
        <div  class="col-xs-12 text-xs-center" ng-show="!searching && results.Count == 0">
            No encontramos resultados
        </div>
        <div  class="col-xs-12" ng-show="!searching && results.Count > 0">
        <h4>Hay <strong>{{results.Count}}</strong> resultados de búsqueda</h4>           
        <div class="col-xs-12">
            <div class="col-sm-6 col-xs-12" ng-repeat="item in results.Results">
                <div class="card result-item" >
                    <div class="card-img-top">
                        <img class="img-fluid" ng-src="{{curateUrl(item.Document.imdbPictureURL)}}" alt="Card image cap">
                    </div>                    
                    <div class="card-block">
                        <h4 class="card-title">{{item.Document.title}}</h4>
                        
                        <small class="text-muted">{{item.Document.spanishTitle}}</small>
                        <p class="card-text">Año: {{item.Document.year}}</p>
                        <p class="card-text">Puntaje: {{item.Document.rtAllCriticsRating}}</p>
                        <p class="card-text">Géneros: <a href="#" class="label label-default label-pill" ng-click="filter($event, 'genreTags', genre)" ng-repeat="genre in item.Document.genreTags">{{genre}}</a></p>
                        <a href="http://www.imdb.com/title/tt{{item.Document.imdbID}}" class="card-link" target="_blank">Ver en Imdb</a>
                        <p class="card-text"><small class="text-muted"><strong>Score</strong> {{item.Score}}</small></p>
                    </div>

                </div>
           </div>
            
        </div>
        <nav class="clearfix" ng-show="results.Count > 0">
            <ul class="pager">
                <li class="pager-prev" ng-show="page > 1"><a href="#" ng-click="prev($event)"><span aria-hidden="true">&larr;</span> Older</a></li>
                <li class="pager-next"><a href="#" ng-click="next($event)">Newer <span aria-hidden="true">&rarr;</span></a></li>
            </ul>
        </nav>
        </div>
    </div>
</div>