<div class="container searchBox">
    <div class="page-header hero">
        <h1>Advanced Querying</h1>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <form>
        <div class="input-group">
            
            <span class="input-group-addon"><span class="fa fa-search"></span></span>
            <input type="text" class="form-control" placeholder="Buscar..." ng-model="searchText" ng-disabled="searching">
            <div class="input-group-btn">
               <button class="btn btn-primary" type="submit" ng-click="search($event)" ng-disabled="searching">Buscar</button>
            </div>
            
        </div>
        </form>
    </div>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 alert alert-info">
        <ul class="list-unstyled">
            <li><a href="https://msdn.microsoft.com/en-us/library/azure/mt589323.aspx#bkmk_fuzzy" target="_blank"><span class="fa fa-link"></span> Fuzzy search</a>:<kbd>tap~1</kbd></li>
            <li><a href="https://msdn.microsoft.com/en-us/library/azure/mt589323.aspx#bkmk_proximity" target="_blank"><span class="fa fa-link"></span> Proximity search</a>:<kbd>"back future"~2</kbd></li>
            <li><a href="https://msdn.microsoft.com/en-us/library/azure/mt589323.aspx#bkmk_termboost" target="_blank"><span class="fa fa-link"></span> Term boosting</a>:<kbd>indiana jones temple^2</kbd></li>
        </ul>
    </div>
</div>    

<div class="container" >
    <div class="col-xs-12">
        <div class="col-xs-12 text-xs-center" ng-show="searching">
                <h4>Buscando...</h4><br>
                <img src="images/loader.gif" class="center-block">
        </div>
        <div  class="col-xs-12 text-xs-center" ng-show="!searching && results.Count == 0">
            No encontramos resultados
        </div>
        <div  class="col-xs-12" ng-show="!searching && results.Count > 0">
        <h4>Hay <strong>{{results.Count}}</strong> resultados de búsqueda</h4>           
        <div class="col-xs-12" ng-repeat="item in results.Results">
                <div class="media result-item">
                    <div class="media-left media-middle">
                        <img class="media-object" ng-src="{{curateUrl(item.Document.imdbPictureURL)}}">
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading">{{item.Document.title}}</h4>
                         <small class="text-muted">{{item.Document.spanishTitle}}</small>
                        <p><u>Año</u>: {{item.Document.year}} <u>Puntaje</u>: {{item.Document.rtAllCriticsRating}}</p>
                        <p><u>Géneros</u>: <a href="#" class="label label-default label-pill" ng-repeat="genre in item.Document.genreTags">{{genre}}</a>
                        <br><u>Tags</u>: <a href="#" class="label label-default label-pill"  ng-repeat="genre in item.Document.movieTags">{{genre}}</a></p>
                        <small class="text-muted"><strong>Score</strong> {{item.Score}}</small>
                    </div>
                    </div>             
                
           </div>
            
        </div>
        <nav class="clearfix" ng-show="results.Count > 0">
            <ul class="pager">
                <li class="pager-prev" ng-show="page > 1"><a href="#" ng-click="prev($event)"><span aria-hidden="true">&larr;</span> Anteriores</a></li>
                <li class="pager-next"><a href="#" ng-click="next($event)">Siguientes <span aria-hidden="true">&rarr;</span></a></li>
            </ul>
        </nav>
        </div>
    </div>
</div>