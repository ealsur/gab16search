<div class="container searchBox">
    <div class="page-header hero">
        <h1><small><span class="glyphicon glyphicon-th-list"></span></small> Facets y Filters</h1>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <form>
        <div class="input-group">
            
            <span class="input-group-addon"><span class="fa fa-search"></span></span>
            <input type="text" class="form-control" placeholder="Buscar..." data-ng-model="searchText">
            <div class="input-group-btn">
               <button class="btn btn-default" type="submit" data-ng-click="search($event)">Buscar</button>
            </div>
            
        </div>
        </form>
    </div>
</div>    

<div class="container">
    <div class="col-sm-3">
        <div class="well">
        <h4>Filtros disponibles</h4>
        <div class="list-group">
        <div ng-repeat="(key, value) in results.Facets" class="list-group-item">
            <h4 class="list-group-item-heading">{{key}}</h4>
            <ul>
                <li ng-repeat="filtro in value">{{filtro.value}} ({{filtro.count}})</li>
            </ul>
        </div>
        </div>
        </div>
    </div>
    <div class="col-sm-9">
        <h4>Hay <strong>{{results.Count}}</strong> resultados de búsqueda</h4>
        <div class="col-xs-12">
            <div class="card-columns">
                <div class="card" ng-repeat="item in results.Results">
                    <div class="card-img-top">
                        <img class="img-fluid" ng-src="{{curateUrl(item.Document.imdbPictureURL)}}" alt="Card image cap">
                    </div>                    
                    <div class="card-block">
                        <h4 class="card-title">{{item.Document.title}}</h4>
                        <p class="card-text">Año: {{item.Document.year}}</p>
                        <p class="card-text">Géneros: <span class="label label-default label-pill" ng-repeat="genre in item.Document.genreTags">{{genre}}</span></p>
                        <a href="http://www.imdb.com/title/tt{{item.Document.imdbID}}" class="card-link" target="_blank">Ver en Imdb</a>
                        <p class="card-text"><small class="text-muted"><strong>Score</strong> {{item.Score}}</small></p>
                    </div>

                </div>

            </div>
        </div>
        <nav class="clearfix">
            <ul class="pager">
                <li class="pager-prev"><a href="#"><span aria-hidden="true">&larr;</span> Older</a></li>
                <li class="pager-next"><a href="#">Newer <span aria-hidden="true">&rarr;</span></a></li>
            </ul>
        </nav>
    </div>
</div>